<% provide(:title, "進捗更新(#{@repair.customer_name})") %>
<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    <h1 class="modal-title">進捗更新</h1>
    </div>
    <div class="modal-body">
      <h2>チェックボタンを押して更新</h2>
      <div class="row">
        <div class="col-md-10 col-md-offset-1 center">
          <%= form_with(model: @repair, local: true) do |f| %>
       		<div class="chkbox-reminder">
      	  	<%= f.check_box :reminder, id: "chkbox-reminder" %>
      	  	<%= f.label "催促あり", for: "chkbox-reminder" %>
      		</div>
          <div class="btn-reminder">
            <%= f.submit "更新", class: "btn btn-lg btn-danger" %>
          </div>
      		<% end %>
        </div>
      </div>
    </div>
  </div>
</div>
