<% provide(:title, @stove.customer_name) %>

<h1>お客様情報詳細</h1>
<div class="row">
  <div class="col-md-10 col-md-offset-1 show-user">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th class="col-md-3">受付日</th>
          <td><%= @stove.signup_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>得意先名</th>
          <td><%= @stove.customer_name %></td>
        </tr>
        <tr>
          <th>進捗状況</th>
          <td>
            <!--< if @stovemaint.progress == '1' >-->
            <!--  <label class="label label-success">完了</label>-->
            <!--< else >-->
            <!--  <label class="label label-danger">未完</label>-->
            <!--< end >-->
          </td>
        </tr>
        <tr>
          <th>メンテナンス</th>
          <td>
            <% if @stove.summary_1 == '1' %>
              <label class="label label-danger">煙突</label>
            <% end %>
            <% if @stove.summary_2 == '1' %>
              <label class="label label-warning">本体</label>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>電話</th>
          <td><%= @stove.phone_number %></td>
        </tr>
        <tr>
          <th>携帯</th>
          <td><%= @stove.mobile_number %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @stove.address %></td>
        <tr>
          <th>備考</th>
          <td class="col-md-10">
            <%= @stove.note %>
            <!--<= auto_link(safe_join(@stove.note.split("\n"), tag(:br))) >-->
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
